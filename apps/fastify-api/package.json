{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint . --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:config": "jest --testPathPattern=config",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:all": "jest --testPathPattern='(config|integration|e2e)'"
  },
  "dependencies": {
    "@fastify/static": "^8.3.0",
    "@hl8/async-storage": "workspace:*",
    "@hl8/bootstrap": "workspace:*",
    "@hl8/cache": "workspace:*",
    "@hl8/config": "workspace:*",
    "@hl8/exceptions": "workspace:*",
    "@hl8/logger": "workspace:*",
    "@hl8/swagger": "workspace:*",
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs/common": "11.1.8",
    "@nestjs/core": "11.1.8",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-fastify": "11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.2",
    "nestjs-cls": "^6.0.1",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.1.0",
    "rxjs": "7.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.39.1",
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.8",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "24.10.0",
    "@types/supertest": "6.0.3",
    "eslint": "9.39.1",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "supertest": "7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.46.3"
  }
}
